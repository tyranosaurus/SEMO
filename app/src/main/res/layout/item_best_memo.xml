<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_marginTop="-16dp"
    android:layout_marginBottom="-16dp"
    android:layout_marginLeft="-14dp"
    android:layout_marginRight="-14dp"
    android:background="@drawable/memo_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/icon_best_rank">
            <TextView
                android:id="@+id/textViewRanking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-5dp"
                android:layout_marginTop="-2dp"
                android:layout_gravity="center"
                android:text="10"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:textStyle="bold" />
        </FrameLayout>

        <TextView
            android:id="@+id/textViewNickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="닉네임"
            android:textColor="#4990e2"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/textViewCombineCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="7dp"
            android:text="누적 조합 수"
            android:textColor="#616161"
            android:textSize="10dp" />

    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginLeft="48dp"
        android:background="#e0e0e0" />

    <TextView
        android:id="@+id/textViewMemoContents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="내용"
        android:textColor="#de000000"
        android:textSize="12dp"
        android:ellipsize="end"
        android:maxLines="8"/>

</LinearLayout>